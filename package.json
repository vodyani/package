{
  "name": "@vodyani/<PACKAGE_NAME>",
  "license": "MIT",
  "version": "0.0.1",
  "author": "ChoGathK",
  "description": "<PACKAGE_DESCRIPTION>",
  "homepage": "https://github.com/vodyani/<PACKAGE_NAME>#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vodyani/<PACKAGE_NAME>.git"
  },
  "keywords": [
    "<Define package keywords here>"
  ],
  "bugs": {
    "url": "https://github.com/vodyani/<PACKAGE_NAME>/issues"
  },
  "files": [
    "package.json",
    "README.MD",
    "LICENSE",
    "index.js",
    "dist"
  ],
  "main": "index.js",
  "scripts": {
    "release": "standard-version",
    "release:first": "npm run release -- --prerelease",
    "release:prepatch": "npm run release -r prepatch && npm run release:commit",
    "release:patch": "npm run release -r prepatch && npm run release:commit",
    "release:minor": "npm run release -r prepatch && npm run release:commit",
    "release:major": "npm run release -r prepatch && npm run release:commit",
    "release:commit": "git add . && git commit -m \"chore(release): publish v$npm_package_version\""
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "skip": {
      "tag": true,
      "commit": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "husky": "^4.3.8",
    "commitizen": "^4.2.4",
    "standard-version": "^9.3.2"
  }
}
